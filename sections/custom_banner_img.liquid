{% if section.settings.image_with_text_image %}
  {{ section.settings.image_with_text_image | image_url: height: nil | image_tag }}
{% endif %}

{% if section.settings.title %}
  <span class="banner_title">{{section.settings.title }}</span>
{% endif %}

<style>
  .banner {
    width: 1200px;
    margin: 40px auto 0;
    position: relative;
  }

  .banner img {
    width: 100%;
    object-fit: cover; 
  }

  .banner_title {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #fff;
    font-size: 64px;
    text-transform: uppercase;
    letter-spacing: 4px;
  }
</style>

{% schema %}
{
  "name": "Banner",
  "tag": "section",
  "class": "banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_with_text_image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title of the banner"
    }
  ]
}
{% endschema %}