{% if href %}
    {% assign linkTo = href %}
{% else %}
    {% assign linkTo = "#" %}
{% endif %}

<a class="btn-link" href={{linkTo }}>
    <button class="btn-view-all">
        {{label }}
    </button>
</a>

<style>
    .btn-link {
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 10px;
      }
      
      .btn-view-all {
        min-width: 200px;
        padding: 10px 20px;
        font-size: 16px;
        background-color: #fff;
        outline: none;
        border: 1px solid #000;
        cursor: pointer;
      }
    
      .btn-view-all:hover {
        color: red;
        border-color: red;
      }
</style>